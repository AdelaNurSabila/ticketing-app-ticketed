generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:Fisika16*@localhost:3306/ticketing_api"
}

model Sample {
  id        Int      @id @default(autoincrement())
  name      String
  code      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("samples") // if you want to use snake_case format
}



model Event {
  id          Int @id @default(autoincrement())
  name        String
  slug        String @unique
  price       Int
  time        String
  description String @db.Text
  location    String
  rating      Float
  type        EventType
  available   EventStatus

  createAt    DateTime @default(now())
  updatedAt   DateTime? @updatedAt 
}
enum EventType {
  FREE
  PAID
}

enum EventStatus {
  AVAILABE
  UNAVAILABLE
}

model User {
  id        Int @id   @default(autoincrement())
  username  String
  firstName String
  lastName  String
  password  String
  email     String    @unique
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum Role {
  USER
  ORGANIZER
}